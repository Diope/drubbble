<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li class="nav-link"><%= link_to "Home", root_path %></li>
        <li class="nav-link"><%= link_to "About Us", "#" %></li>
        <% if user_signed_in? %>
          <li class="nav-link more"><%= link_to "#{current_user.email}", "#" %>
            <ul class="submenu">
              <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            </ul>
          <li class="nav-link"><%= link_to "Create New Shot", new_post_path, class: "button" %></li>
        <% else %>
            <li class="nav-link"><%= link_to "Sign In", new_user_session_path %></li>
        <% end %>
          </li>
      </ul>
    </nav>
    <div class="navigation-tools">
      <div class="search-bar">
        <%= form_tag '/posts', method: :get, role: "search" do %>
          <%= text_field_tag(
              :search,
              params[:search],
              placeholder: "Enter Search",
          ) %>
        <% end %>
      </div>
    </div>
  </div>
</header>
