<%= render "followers" %>

<div class="profile_head">
  <%= image_tag @user.profile.avatar.url(:medium), class: "medium_avatar" %>
  <h1><%= "#{@profile.user.username}" %></h1>
  <h2><%= @user.profile.tagline %></h2>
  <span><% if @user.profile.location? %><%= fa_icon "map-marker" %><%= @user.profile.location %><% end %></span>
  <span><% if @user.profile.website? %><%= fa_icon "globe" %><%= @user.profile.website %><% end %></span>
  <span><% if @user.profile.available? %><%= fa_icon "envelope" %>Hire Me!<% end %></span>
</div>
<hr>

<div class="profile_posts">
  <% @user.posts.each do |post| %>
      <div class="cards">
        <div class="card">
          <div class="card-header">
            <%= truncate(post.title, length: 23) %>
          </div>
          <div class="card-image">
            <a href="<%= post_path(post) %>">
              <%= image_tag post.userShot %>
            </a>
          </div>
          <div class="card-bottom">
            temp stuff here
          </div>
        </div>
      </div>
  <% end %>
</div>
