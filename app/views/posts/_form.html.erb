<script src="app/assets/javascripts/characterCount.js"></script>
<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h3><%= pluralize(@post.errors.count, "Error") %> Prevents this post from being saved</h3>

		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :content %>
	<%= f.text_area :content, as: :text, rows: 6 %>

	<%= f.submit :submit %>

<% end %>
