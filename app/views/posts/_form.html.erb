<script src="app/assets/javascripts/characterCount.js"></script>
<!-- I can generalize the 'shared/_error_message so that it's used here-->
<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h3><%= pluralize(@post.errors.count, "Error") %> Prevents this shot from being saved</h3>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label "Upload Shot" %>
	<%= f.file_field :userShot %>

	<%= f.label :content %>
	<%= f.text_area :content, as: :text, rows: 6 %>

	<%= f.label :tag_list %>
	<%= f.text_field :tag_list %>

	<%= f.submit yield(:button_text) %>

<% end %>
